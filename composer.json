{
  "name": "cristianoc72/icon-button",
  "type": "library",
  "description": "Simple extension for Symfony Form library, to apply icons to buttons",
  "keywords": ["symfony", "form", "icon"],
  "license": "MIT",
  "authors": [
    {
      "name": "Cristiano Cinotti",
      "email": "cristianocinotti@gmail.com"
    }
  ],
  "require": {
    "php": ">=5.5",
    "symfony/form": "^3.0",
    "symfony/twig-bridge": "^3.0",
    "symfony/translation": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.7",
    "symfony/browser-kit": "^3.0",
    "symfony/css-selector": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "cristianoc72\\IconButton\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "cristianoc72\\IconButton\\Tests\\": "tests"
    }
  }
}
